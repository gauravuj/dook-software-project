<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root minHeight="700" minWidth="850" onCloseRequest="#handleExit" title="Dook" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/address_book_32.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@styleSheets/DarkTheme.css" />
        <URL value="@styleSheets/Extensions.css" />
      </stylesheets>

      <VBox style="-fx-background-color: black;">
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>

        <HBox VBox.vgrow="ALWAYS">
          <VBox fx:id="personList" minWidth="350" prefHeight="600" prefWidth="400" styleClass="pane-without-border" VBox.vgrow="ALWAYS">
              <HBox spacing="10" alignment="CENTER">
                  <padding>
                      <Insets top="10" right="10" bottom="10" left="10"/>
                  </padding>
                  <Button styleClass="hbox-button" mnemonicParsing="false" text="All" HBox.hgrow="ALWAYS" />
                  <Button styleClass="hbox-button" mnemonicParsing="false" text="Profs" HBox.hgrow="ALWAYS" />
                  <Button styleClass="hbox-button" mnemonicParsing="false" text="TAs" HBox.hgrow="ALWAYS" />
                  <Button styleClass="hbox-button" mnemonicParsing="false" text="Others" HBox.hgrow="ALWAYS" />
              </HBox>
            <padding>
              <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <StackPane fx:id="personListPanelPlaceholder" VBox.vgrow="ALWAYS" />
                  <HBox.margin>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </HBox.margin>
          </VBox>

          <VBox HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
              <VBox fx:id="bookingList" prefHeight="-Infinity" styleClass="pane-without-border" VBox.vgrow="ALWAYS">
                  <padding>
                      <Insets bottom="5" left="10" right="10" top="5" />
                  </padding>
                  <StackPane fx:id="bookingListPanelPlaceholder" VBox.vgrow="ALWAYS" />
                  <HBox.margin>
                      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </HBox.margin>
              </VBox>

            <StackPane fx:id="resultDisplayPlaceholder" maxHeight="200" minHeight="200" prefHeight="200" styleClass="pane-without-border" VBox.vgrow="NEVER">
              <padding>
                <Insets bottom="5" left="10" right="10" top="5" />
              </padding>
                     <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                     </VBox.margin>
            </StackPane>

            <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-without-border">
              <padding>
                <Insets bottom="5" left="10" top="5" />
              </padding>
                     <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                     </VBox.margin>
            </StackPane>
                  <HBox.margin>
                     <Insets bottom="5.0" left="5.0" right="10.0" top="5.0" />
                  </HBox.margin>
          </VBox>
        </HBox>

        <StackPane fx:id="statusbarPlaceholder" />
      </VBox>
    </Scene>
  </scene>
</fx:root>
